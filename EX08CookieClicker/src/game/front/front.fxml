<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.front.FrontController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="600.0">
            <center>
                <Label fx:id="title" text="Cookie Clicker" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Product Sans" size="72.0" />
                    </font>
                </Label>
            </center>
        </BorderPane>
        <BorderPane layoutY="200.0" prefHeight="200.0" prefWidth="600.0">
            <center>
                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonClick" text="Start" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Comic Sans MS" size="36.0" />
                    </font>
                </Button>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
